<%- include('../../include/header.ejs') %>
    <link rel="stylesheet" href="/stylesheets/board.css" />
    <section>
        <div id="indexbg" class="mb-5"></div>
        <div id="indexbg_text">
            <h1 class="fs-1">자유 게시판</h1>
            <div>아직 미완성입니다..!</div>
        </div>
        <div>
            <table class="table table-responsive-sm table-hover text-center">
                <thead>
                    <tr>
                        <th scope="col" width="10%">순번</th>
                        <th scope="col" width="40%">제목</th>
                        <th scope="col" width="20%">작성자</th>
                        <th scope="col" width="20%">날짜</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<db_data.length;i++){
                         var data = db_data[i];%>
                        <tr onclick="location.href=''">
                            <td>
                                <%=data.qid%>
                            </td>
                            <td>
                                <%=data.title%>
                            </td>
                            <td>
                                <%=data.user_id%>
                            </td>
                            <td>
                                <%=dayjs(data.date).format('YYYY-MM-DD');%>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
        </div>
        <% if(permission.user_id!=undefined){%>
        <div class="mx-auto" style="text-align: right;"><a href="./freeBoardWrite" type="button"
                class="btn btn-primary">작성하기</a></div>
                <%}%>
    </section>
    <br><br>
    <%- include('../../include/footer.ejs') %>