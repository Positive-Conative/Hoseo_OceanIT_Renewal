<style>
    #blur_area_img{
        position: absolute;
        top:0;
        left:40%;
        width:25vw;
        height:25vw;
        z-index:5;
    }
    section {
        background-color: rgb(227, 227, 241);
        padding-top: 50px;
        text-align: center;
    }
    #img_area{
        width: 100%;
        height: 30vw;
    }
    #blur_area{
        position: absolute;
        top:3%;
        bottom:3%;
        left:3%;
        right:3%;
        z-index: 3;
        background-color: white;
        filter:blur(6px);
        opacity: 60%;
        
        animation-duration: 1s;
        animation-name: slidein;
    }
    #blur_area_back{
        position: absolute;
        top:0;
        bottom:0;
        left:0;
        right:0; 
        z-index: 2;
    }
    @keyframes slidein {
        from {
            top:0;
            bottom:0;
            left:0;
            right:0; 
        }

        to {
            top:3%;
            bottom:3%;
            left:3%;
            right:3%;
        }
    }
</style>