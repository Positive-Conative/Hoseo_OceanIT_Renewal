<%- include('../include/header.ejs') %>
    <link rel="stylesheet" href="/stylesheets/research_fields/researchFieldsMain.css" />
    <link rel="stylesheet" href="/stylesheets/research_fields/researchFieldsDetail.css" />
    <section>
        <form method="post" action="/research/results/write">
            <div id="indexbg" class="mb-5"></div>
            <div id="indexbg_text">
                <h1 class="fs-1">연구 분야</h1>

            </div>
            <div class="container-fluidp-3 p-3">
                <div class=" row">
                    <div id="researchDetailContent" class="col-12">

                        <article class="container">

                            <table class="table table-responsive-sm text-center">
                                <tbody>
                                    <tr>
                                        <th>특허상태</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text" name="group">
                                        </td>
                                        <th class="align-middle">날짜</th>
                                        <td>
                                            <input class="form-control" type="datetime-local" style="width: 100%; border: none;" name="date">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>발표명</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text" name="title_ko">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>저자명</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text" name="writer_ko">
                                        </td>
                                        <th>발표국가</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text"
                                                name="announe_nation_ko">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="align-middle ">구분</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text" name="classify_ko">
                                        </td>
                                        <th class="align-middle ">특허번호</th>
                                        <td>
                                            <input style="width: 100%; border: none;" type="text" name="application_num">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="text-align: right; padding-right:6%">
                                <button type="submit" class="btn btn-outline-secondary">작성완료</button>
                        </article>

                    </div>
                </div>

            </div>
        </form>
    </section>
    <%- include('../include/footer.ejs') %>

    <script>
        flatpickr("input[type=datetime-local]", {});
     </script>